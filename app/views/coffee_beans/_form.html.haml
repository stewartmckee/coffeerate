= simple_form_for @coffee_bean do |f|
  - if @coffee_bean.errors.any?
    #error_explanation
      %h2= "#{pluralize(@coffee_bean.errors.count, "error")} prohibited this coffee_bean from being saved:"
      %ul
        - @coffee_bean.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.association :supplier
  = f.input :description
  = f.button :submit
